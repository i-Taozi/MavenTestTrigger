<configuration>
  <property>
    <name>server.zookeeper.quorum</name>
    <value>host1:2181,host2:2181,host3:2181</value>
    <description>Specifies the zookeeper host:port</description>
  </property>
  <property>
    <name>server.host</name>
    <value>123.456.0.1</value>
    <description>Specifies the host the server should bind to</description>
  </property>
  <property>
    <name>server.jdbc.driver</name>
    <value>com.mysql.jdbc.Driver</value>
    <description>specifies db driver</description>
  </property>
  <property>
    <name>server.jdbc.connection.string</name>
    <value>jdbc:mysql://127.0.0.1:3306/coopr?useLegacyDatetimeCode=false</value>
    <description>specifies how to connect to mysql</description>
  </property>
  <property>
    <name>server.jdbc.validation.query</name>
    <value>SELECT 1</value>
    <description>Validation query used by JDBC connection pool to validate new DB connections</description>
  </property>
</configuration>
