<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="edu.lipreading.android" android:versionCode="21"
	android:versionName="2.1">

	<uses-sdk android:minSdkVersion="11" android:targetSdkVersion="17" />

	<uses-permission android:name="android.permission.CAMERA" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-feature android:name="android.hardware.camera.front"
		android:required="true" />

	<supports-screens android:resizeable="true"
		android:smallScreens="true" android:normalScreens="true"
		android:largeScreens="true" android:anyDensity="true" />

	<application android:label="@string/app_name" android:icon="@drawable/icon"
		android:allowBackup="true" android:theme="@style/AppTheme">

		<activity android:name="LipReadingActivity" android:label="@string/app_name"
			android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
	</application>

</manifest>
