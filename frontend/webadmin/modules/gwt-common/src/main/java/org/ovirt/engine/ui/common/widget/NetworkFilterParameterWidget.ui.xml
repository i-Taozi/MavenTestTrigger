<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field='constants' type='org.ovirt.engine.ui.common.CommonApplicationConstants' />

    <ui:style type="org.ovirt.engine.ui.common.widget.AddRemoveRowWidget.WidgetStyle">
        .mainPanel {
            width: 100%;
        }

        .labelStyle {
            font-weight: bold;
            margin-bottom: 10px;
        }


        .buttonStyle {
            margin-left: 2px;
        }
    </ui:style>

    <g:FlowPanel addStyleNames="{style.mainPanel}" >
        <g:Label text="{constants.networkFilterParametersWidgetName}" addStyleNames="{style.labelStyle}" />
        <g:FlowPanel ui:field="contentPanel" />
    </g:FlowPanel>

</ui:UiBinder>
