<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
    xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
        .mainContainer {
            overflow: auto;
        }
    </ui:style>

    <g:FlowPanel addStyleNames="{style.mainContainer}">
        <g:SimplePanel ui:field="headerPanel" />
        <g:SimplePanel ui:field="notificationsPanel" />
        <g:SimplePanel ui:field="menuPanel" />
        <g:FlowPanel ui:field="mainContentPanel" addStyleNames="container-pf-nav-pf-vertical" />
    </g:FlowPanel>

</ui:UiBinder>
