<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
    xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:w="urn:import:org.ovirt.engine.ui.common.widget"
    xmlns:b="urn:import:org.gwtbootstrap3.client.ui">

    <ui:style>
        .inheritPosition {
            position: inherit;
        }
    </ui:style>

    <g:FlowPanel>
        <b:Container fluid="true">
            <b:Row>
                <b:Column size="SM_12" addStyleNames="detailMainHeaderContainer">
                    <g:FlowPanel ui:field="breadCrumbsContainer" addStyleNames="detailMainBreadcrumbs" />
                    <g:FlowPanel ui:field="mainActionPanel" addStyleNames="detailMainActionPanelContainer" />
                </b:Column>
            </b:Row>
            <b:Row>
                <b:Column size="SM_12" addStyleNames="{style.inheritPosition}">
                    <g:FlowPanel ui:field="tabContainer" />
                    <g:SimplePanel ui:field="tabContentContainer" />
                </b:Column>
            </b:Row>
        </b:Container>
    </g:FlowPanel>

</ui:UiBinder>
