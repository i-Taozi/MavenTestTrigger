<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>standalone</id>
    <formats>
        <format>zip</format>
    </formats>
    <baseDirectory>coopr-${project.version}-standalone</baseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/../coopr-provisioner</directory>
            <outputDirectory>/provisioner</outputDirectory>
            <excludes>
                <exclude>**/provisioner-site.xml</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../coopr-ui</directory>
            <outputDirectory>/ui</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../coopr-server/target</directory>
            <outputDirectory>/server/lib</outputDirectory>
            <includes>
                <include>*-jar-with-dependencies.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../coopr-docs/licenses</directory>
            <outputDirectory>/licenses</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../coopr-server/bin</directory>
            <outputDirectory>/server/bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../coopr-templates</directory>
            <outputDirectory>/server/templates</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../coopr-server/templates/mock</directory>
            <outputDirectory>/server/templates/mock</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/bin</directory>
            <outputDirectory>/bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/server/conf</directory>
            <outputDirectory>/server/conf</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../coopr-server/distribution/etc/coopr/conf.dist</directory>
            <outputDirectory>/server/conf</outputDirectory>
            <includes>
                <include>*.example</include>
            </includes>
        </fileSet>
      <fileSet>
        <directory>${project.basedir}/../coopr-cli/target/bin</directory>
        <outputDirectory>/cli/bin</outputDirectory>
      </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.basedir}/provisioner/conf/provisioner-site.xml</source>
            <outputDirectory>/provisioner/conf</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/README.md</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>${project.basedir}/../LICENSE</source>
            <outputDirectory>/</outputDirectory>
        </file>
      <file>
        <source>${project.basedir}/../coopr-cli/target/coopr-cli-${version}.jar</source>
        <outputDirectory>/cli/lib</outputDirectory>
      </file>
    </files>
</assembly>
